{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "sourceMap": true,
        "paths": {
            "@egos-lab/shared": [
                "./packages/shared/src/index.ts"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}